# Jobbly Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - add it to .gitignore

# ================================
# BASIC APPLICATION SETTINGS
# ================================
NODE_ENV=development
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/jobbly_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobbly_dev
DB_USER=username
DB_PASSWORD=password

# Redis for caching and background jobs
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Supabase Project
SUPABASE_URL=https://<your-project-ref>.supabase.co
SUPABASE_ANON_KEY=<your-anon-public-api-key>
SUPABASE_SERVICE_KEY=<your-service-role-key>  # only use in backend, never frontend

# Database (direct PostgreSQL connection if needed)
DATABASE_URL=postgresql://postgres:<password>@db.<your-project-ref>.supabase.co:5432/postgres

# JWT (Supabase Auth)
JWT_SECRET=<your-jwt-secret>
JWT_EXPIRATION=3600

# App Config
APP_ENV=development
APP_PORT=8000
# ================================
# AI/ML MODEL SETTINGS
# ================================
# Sentence Transformers Model
EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDINGS_CACHE_DIR=./models/embeddings

# FAISS Vector Database
FAISS_INDEX_PATH=./data/faiss_index
VECTOR_DIMENSION=384

# SpaCy Model for NLP
SPACY_MODEL=en_core_web_sm
SPACY_MODEL_PATH=./models/spacy

# ================================
# VOICE INPUT SETTINGS
# ================================
# ASR (Automatic Speech Recognition)
ASR_PROVIDER=whisper  # Options: whisper, google_stt
WHISPER_MODEL=small   # Options: tiny, base, small, medium, large
WHISPER_DEVICE=cpu    # Options: cpu, cuda
WHISPER_CACHE_DIR=./models/whisper

# Google Cloud Speech-to-Text (if using google_stt)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json

# TTS (Text-to-Speech)
TTS_PROVIDER=coqui   # Options: coqui, google_tts, none
TTS_MODEL_PATH=./models/tts

# Wake Word Detection
WAKE_WORD_MODEL_PATH=./models/wakeword
WAKE_WORDS=hey jobbly,find internships

# ================================
# EXTERNAL APIS
# ================================
# Job Board APIs (for data ingestion)
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# Translation Services (if needed)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key
DEEPL_API_KEY=your-deepl-api-key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@jobbly.com

# ================================
# FILE STORAGE
# ================================
# AWS S3 for resume and document storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=jobbly-documents
S3_BUCKET_URL=https://jobbly-documents.s3.amazonaws.com

# Local file storage (fallback)
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# ================================
# INTERNATIONALIZATION
# ================================
# Supported languages
SUPPORTED_LANGUAGES=en,hi,es,fr,ar
DEFAULT_LANGUAGE=en

# Language detection
DETECT_LANGUAGE_API_KEY=your-detect-language-key

# ================================
# SECURITY SETTINGS
# ================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,https://jobbly.com
ALLOWED_HOSTS=localhost,127.0.0.1,jobbly.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session settings
SESSION_LIFETIME=86400  # 24 hours in seconds

# ================================
# MONITORING & LOGGING
# ================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
LOG_FILE=./logs/jobbly.log

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ================================
# RECOMMENDATION ENGINE
# ================================
# Recommendation parameters
MIN_SIMILARITY_SCORE=0.3
MAX_RECOMMENDATIONS=50
DEFAULT_RECOMMENDATIONS=10

# Collaborative filtering
CF_MODEL_PATH=./models/collaborative_filtering
CF_UPDATE_FREQUENCY=daily  # daily, weekly, monthly

# Content-based filtering weights
SKILL_MATCH_WEIGHT=0.4
LOCATION_MATCH_WEIGHT=0.2
EXPERIENCE_MATCH_WEIGHT=0.2
RECENCY_WEIGHT=0.1
USER_PREFERENCE_WEIGHT=0.1

# ================================
# BACKGROUND JOBS & TASKS
# ================================
# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Task schedules
EMBEDDING_UPDATE_SCHEDULE=0 2 * * *  # Daily at 2 AM
MODEL_RETRAIN_SCHEDULE=0 3 * * 0     # Weekly on Sunday at 3 AM
DATA_CLEANUP_SCHEDULE=0 4 * * *      # Daily at 4 AM

# ================================
# DEPLOYMENT SETTINGS
# ================================
# Production settings
PRODUCTION_URL=https://api.jobbly.com
FRONTEND_URL=https://jobbly.com
API_VERSION=v1

# Docker settings
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Health check endpoints
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# ================================
# FEATURE FLAGS
# ================================
# Feature toggles for development
ENABLE_VOICE_INPUT=true
ENABLE_MULTILINGUAL=false
ENABLE_COLLABORATIVE_FILTERING=false
ENABLE_RECRUITER_PORTAL=true
ENABLE_ANALYTICS=true
ENABLE_BIAS_MONITORING=true

# A/B Testing
AB_TEST_RECOMMENDATION_ALGORITHM=true
AB_TEST_UI_VARIANT=false